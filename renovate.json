  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchFiles": ["docker-compose*"],
      "matchUpdateTypes": ["minor", "major"],
      "enabled": false
    }
  ],
  "separateMinorPatch": true,
  "schedule": ["every weekend"]
}
